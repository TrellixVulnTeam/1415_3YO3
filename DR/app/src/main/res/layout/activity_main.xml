<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:src="@drawable/ic_language_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DR"
                android:textSize="80dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_marginLeft="90dp"/>

            <ImageButton
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="90dp"
                android:background="#ffffff"
                android:src="@drawable/ic_search_black_24dp" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/cod51" />
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/cod52"
                        android:layout_marginLeft="50dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_marginTop="30dp"
                        android:layout_height="150dp"
                        android:src="@drawable/cod53"
                        android:layout_marginLeft="20dp"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/cod54"
                        android:layout_marginLeft="50dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_marginTop="30dp"
                        android:layout_height="150dp"
                        android:src="@drawable/cod55"
                        android:layout_marginLeft="20dp"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/cod56"
                        android:layout_marginLeft="50dp"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEEE"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <ImageButton
                android:id="@+id/HomeButton"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:background="#eeeeee"
                android:src="@drawable/ic_home_black_24dp"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="632dp" />

            <ImageButton
                android:id="@+id/ShopButton"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:src="@drawable/ic_shopping_cart_black_24dp"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="632dp" />

            <ImageButton
                android:id="@+id/CateButton"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:src="@drawable/ic_assignment_black_24dp"
                tools:layout_editor_absoluteX="202dp"
                tools:layout_editor_absoluteY="632dp" />

            <ImageButton
                android:id="@+id/SettingButton"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:src="@drawable/ic_settings_black_24dp"
                tools:layout_editor_absoluteX="305dp"
                tools:layout_editor_absoluteY="632dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>